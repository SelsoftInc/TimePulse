# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (if using PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=timepulse
DB_USER=your_username
DB_PASSWORD=your_password

# OpenAI Configuration (Optional - for AI processing)
OPENAI_API_KEY=your_openai_api_key

# Azure OpenAI Configuration (Alternative to OpenAI)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_API_VERSION=2023-06-01-preview

# Azure Document Intelligence (Optional - for advanced document processing)
DOCUMENTINTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
DOCUMENTINTELLIGENCE_API_KEY=your_document_intelligence_key

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads

# Security
JWT_SECRET=your_jwt_secret_key
CORS_ORIGIN=http://localhost:3000
