# TimePulse Server Environment Configuration - REMOTE/PRODUCTION
# Copy this file to .env for production deployment

# Server Configuration
PORT=5001
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# Remote Database Configuration (PostgreSQL)
DB_HOST=your-postgres-host.com
DB_PORT=5432
DB_NAME=timepulse_production
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=true

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_for_production
JWT_EXPIRES_IN=24h

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI Configuration (Alternative to OpenAI)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# Azure Document Intelligence Configuration
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_document_intelligence_key

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads

# Tenant Onboarding Configuration
ONBOARD_FOLDER=./Onboard
